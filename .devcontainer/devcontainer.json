{
  "name": "NetlistIO Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "GIT_USERNAME": "${loacalEnv:GITHUB_USER}",
      "GIT_EMAIL": "${localEnv:GITHUB_USER}@gmail.com"
    }
  },
  "postCreateCommand": "./scripts/setup_data.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "my-python.pylint",
        "njpwerner.autodocstring",
        "tamasfe.even-better-toml"
      ]
    }
  },
  "remoteUser": "root"
}
